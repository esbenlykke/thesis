@article{palotti_benchmark_2019,
	title = {Benchmark on a large cohort for sleep-wake classification with machine learning techniques},
	volume = {2},
	rights = {2019 The Author(s)},
	issn = {2398-6352},
	url = {https://www.nature.com/articles/s41746-019-0126-9},
