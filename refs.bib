  keywords = {Brain Injuries,Data Interpretation; Statistical,Databases; Factual,Endpoint Determination,Head and Neck Neoplasms,Head Injuries; Closed,Humans,Models; Statistical,ROC Curve,Support Vector Machine,Treatment Outcome},
