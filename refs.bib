	issn = {1556-4088},
	url = {https://pubmed.ncbi.nlm.nih.gov/28159089/},
	doi = {10.1016/j.jsmc.2016.10.012},
	abstract = {Biological needs for sleep are met by engaging in behaviors that are largely influenced by the environment, social norms and demands, and societal influences and pressures. Insufficient sleep duration and sleep disorders such as insomnia and sleep apnea are highly prevalent in the {US} population. Thi …},
