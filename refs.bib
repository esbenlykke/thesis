@article{hjorth_measure_2012,
	title = {Measure of sleep and physical activity by a single accelerometer: Can a waist-worn Actigraph adequately measure sleep in children?},
	volume = {10},
	rights = {© 2012 The Authors. Sleep and Biological Rhythms © 2012 Japanese Society of Sleep Research},
