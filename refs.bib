  author = {Difrancesco, Sonia and Lamers, Femke and Riese, Harri\"ette and Merikangas, Kathleen R. and Beekman, Aartjan T. F. and van Hemert, Albert M. and Schoevers, Robert A. and Penninx, Brenda W. J. H.},
